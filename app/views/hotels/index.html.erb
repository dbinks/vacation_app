<div class="page-header">
  <h1>
    Hotels
    <a href="/hotels/new" class="btn btn-lg btn-success">New Hotel</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Hotel image</th>
        <th>Location</th>
        <th>Actions</th>
      </tr>

      <% @hotels.each do |hotel| %>
      <tr>
        <td><%= hotel.name %></td>
        <td><img src="<%= hotel.hotel_image %>"></td>
        <td><a href="/locations/<%= hotel.location_id %>"><%= Location.find_by(:id => hotel.location_id).place %></td>
        <td>
          <a href="/hotels/<%= hotel.id %>" class="btn btn-primary">Show</a>
          <a href="/hotels/<%= hotel.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_hotel/<%= hotel.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
