<div class="page-header">
  <h3><%= @hotel.name %> - <%=@hotel.location.place  %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @hotel.name %></dd>

      <dt>Hotel image</dt>
      <dd><img src="<%= @hotel.hotel_image %>"></dd>

      <dt>Location</dt>
      <dd> <a href="/locations/<%= @hotel.location_id %>"><%= @hotel.location.place %></dd></a>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/hotels" class="btn btn-primary">
        Back
      </a>
      <a href="/hotels/<%= @hotel.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_hotel/<%= @hotel.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
