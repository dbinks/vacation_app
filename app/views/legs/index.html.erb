<div class="page-header">
  <h1>
    Legs
    <a href="/legs/new" class="btn btn-lg btn-success">New Leg</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Location</th>
        <th>Trip</th>
        <th>Actions</th>
      </tr>

      <% @legs.each do |leg| %>
      <tr>
        <td><%= Location.find_by(:id => leg.location_id).place %></td>
        <td><%= Trip.find_by(:id => leg.trip_id).name %></td>
        <td>
          <a href="/legs/<%= leg.id %>" class="btn btn-primary">Show</a>
          <a href="/legs/<%= leg.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_leg/<%= leg.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
