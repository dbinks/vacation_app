<!-- Validation failure messages -->
<% if @location.errors.any? %>
  <% @location.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Location</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_location" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for place -->
      <div class="form-group">
        <label for="place" class="control-label">
          Place
        </label>

        <input type="text" id="place" name="place" placeholder="Place" class="form-control" value="<%= @location.place %>">
      </div>

      <!-- Label and input for place_image -->
      <div class="form-group">
        <label for="place_image" class="control-label">
          Place image
        </label>

        <input type="text" id="place_image" name="place_image" placeholder="Place image" class="form-control" value="<%= @location.place_image %>">
      </div>

      <button class="btn btn-success">
        Create Location
      </button>
      or
      <a href="/trips">Cancel</a>
    </form>
  </div>
</div>
