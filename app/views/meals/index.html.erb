<div class="page-header">
  <h1>
    Meals
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Restaurant</th>
        <th>Rating (0-5)</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>

      <% @meals.each do |meal| %>
      <tr>
        <td><%= Restaurant.find_by(:id => meal.restaurant_id).name %></td>
        <td><%= meal.rating %></td>
        <td><%= meal.description %></td>
        <td>
          <a href="/meals/<%= meal.id %>" class="btn btn-primary">Show</a>
          <a href="/meals/<%= meal.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_meal/<%= meal.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
