<!-- Validation failure messages -->
<% if @restaurant.errors.any? %>
  <% @restaurant.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Restaurant</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_restaurant" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @restaurant.name %>">
      </div>

      <!-- Label and input for restaurant_image -->
      <div class="form-group">
        <label for="restaurant_image" class="control-label">
          Restaurant image
        </label>

        <input type="text" id="restaurant_image" name="restaurant_image" placeholder="Restaurant image" class="form-control" value="<%= @restaurant.restaurant_image %>">
      </div>

      <!-- Label and input for location_id -->
      <div class="form-group">
        <label for="location_id" class="control-label">
          Location
        </label>

          <%= select_tag(:location_id, options_from_collection_for_select(Location.all, :id, :place, @restaurant.location_id), :class => "form-control") %>

      </div>

      <button class="btn btn-success">
        Create Restaurant
      </button>
      or
      <a href="/trips">Cancel</a>
    </form>
  </div>
</div>
