<!-- Validation failure messages -->
<% if @stay.errors.any? %>
  <% @stay.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Stay #<%= @stay.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_stay/<%= @stay.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for hotel_id -->
      <div class="form-group">
        <label for="hotel_id" class="control-label">
          Hotel
        </label>

        <%= select_tag(:hotel_id, options_from_collection_for_select(Hotel.where(:location_id =>@location_id), :id, :name, @stay.hotel_id), :class => "form-control") %>
      </div>

        <input type="hidden" id="leg_id" name="leg_id" placeholder="Leg" class="form-control" value="<%= @stay.leg_id %>">
      </div>

      <div class="form-group">
        <a href="/hotels/new">Add New Hotel</a>

      </div>

      <!-- Label and input for rating -->
      <div class="form-group">
        <label for="rating" class="control-label">
          Rating
        </label>

        <input type="text" id="rating" name="rating" placeholder="Rating" class="form-control" value="<%= @stay.rating %>">
      </div>

      <!-- Label and input for description -->
      <div class="form-group">
        <label for="description" class="control-label">
          Description
        </label>

        <input type="text" id="description" name="description" placeholder="Description" class="form-control" value="<%= @stay.description %>">
      </div>

      <button class="btn btn-warning">
        Update Stay
      </button>
      or
      <a href="/stays/<%= @stay.id %>">Cancel</a>
    </form>
  </div>
</div>
