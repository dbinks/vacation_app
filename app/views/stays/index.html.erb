<div class="page-header">
  <h1>
    Stays
    <a href="/stays/new" class="btn btn-lg btn-success">New Stay</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Hotel</th>
        <th>Leg</th>
        <th>Rating</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>

      <% @stays.each do |stay| %>
      <tr>
        <td><%= Hotel.find_by(:id => stay.hotel_id).name %></td>
        <td><%= Leg.find_by(:id => stay.leg_id).id %></td>
        <td><%= stay.rating %></td>
        <td><%= stay.description %></td>
        <td>
          <a href="/stays/<%= stay.id %>" class="btn btn-primary">Show</a>
          <a href="/stays/<%= stay.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_stay/<%= stay.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
